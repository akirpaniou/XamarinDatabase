<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppXam.CoursePage" Title="Information">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Course" />
            <Entry Text="{Binding CourseName}" />
            <Label Text="Description" />
            <Entry Text="{Binding Description}" />
            <Label Text="StartDate" />
            <Entry Text="{Binding StartDate}" />
            <StackLayout Orientation="Horizontal">
                <Button Text="Save" Clicked="SaveCourse" />
                <Button Text="Delete" Clicked="DeleteCourse" />
                <Button Text="Cancel" Clicked="Cancel" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>